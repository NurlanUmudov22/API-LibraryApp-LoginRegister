{
  "ConnectionStrings": {
    "Default": "Server=DESKTOP-3F8EQGP\\SQLEXPRESS;Database=LibraryAppDb-API;Trusted_Connection=True;"
  },


  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },


  "JWTSettings": {
    "Key": "a-very-long-radonmly-generated-secret-key-that-cannot-be-guessed",
    "Issuer": "https://localhost:7251/", //replace this with your application url
    "ExpireDays": 30
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "App": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3} {Username} {Message:lj}{Exception}{NewLine}"
        }
      }
    ]
  }
}
